<% if @course.editable_by?(current_user) %>
	<div id="toolbox">
		<p>
			<%= link_to "Edit", [:edit, @course] %>
		</p>
	</div>
<% end %>

<h1>Course: <%= @course.name %></h1>

<h2>Class Description</h2>
<div class="description">
	<%= texthtml(@course.description) %>
</div>

<h2>Available Lectures</h2>

<ol>
	<% @course.lectures.active.position_order.each do |lec| %>
		<li><%= link_to lec.name, [@course, lec] %></li>
	<% end %>
</ol>
